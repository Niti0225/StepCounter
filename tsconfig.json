{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    // Ziel/Module passend f체r React Native & Metro
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    // Strenge & Stabilit채t
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    // Plattform- und Typ-Basis
    "lib": ["ES2022", "DOM"],
    "types": ["react", "react-native"],

    // Alias-Unterst체tzung
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    // Unterdr체ckt TS7-Deprecation-Warnungen (du nutzt TS 5.9 im Projekt)
    "ignoreDeprecations": "6.0"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
