{
  "expo": {
    "name": "StepCounter",
    "slug": "StepCounter",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "stayactive",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0B0C2A"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.Leonit.StepCounter",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["fetch", "remote-notification"],
        "NSMotionUsageDescription": "Wir verwenden Bewegungsdaten, um deine Schritte zu zählen.",
        "NSUserTrackingUsageDescription": "Tracking wird nur für Analytics/Anzeige von nicht-personalisierten Anzeigen genutzt.",
        "NSCalendarsUsageDescription": "Kalenderzugriff wird für Erinnerungen genutzt."
      }
    },
    "android": {
      "package": "com.Leonit.StepCounter",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0B0C2A"
      },
      "edgeToEdge": true,
      "permissions": [
        "ACTIVITY_RECOGNITION",
        "NOTIFICATIONS",
        "WAKE_LOCK"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": false,
          "data": [{ "scheme": "stayactive", "host": "open", "pathPrefix": "/" }],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-web-browser",
      "expo-notifications"
    ],
    "extra": {
      "eas": {
        "projectId": "b2abb568-34bb-42a1-a68d-b4237afec192"
      }
    }
  }
}
